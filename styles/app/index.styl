@import 'bootstrap.css'
@import 'mapbox.css'
@import 'leaflet.draw.css'

.ui-coordinates {
  position:absolute;
  bottom:10px;
  right:50px;
  padding:5px 10px;
  background:rgba(0,0,0,0.5);
  color:#fff;
  font-size:11px;
  line-height:18px;
  border-radius:3px;
  min-width: 200px;
  }

.bg {
	background-image: url('/images/gridme.png');
	position:absolute;
	top:0;
  bottom:0;
  right:0;
  left:0;
}

.login-box {
	z-index: 10000;
	position: fixed;
	top: 15px;
	right: 20px;
	margin:0;
	opacity: 1;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

.avatar {
	width: 32px;
	height: 32px;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	box-shadow: 0 1px 2px rgba(0,0,0,.2);
}
.avatar:hover {
	cursor: pointer;
	-webkit-box-shadow: 0 1px 3px rgba(0,0,0,.5);
	box-shadow: 0 1px 3px rgba(0,0,0,.5);
}

.open>.avatar {
	cursor: pointer;
	-webkit-box-shadow: 0 1px 3px rgba(0,0,0,.5);
	box-shadow: 0 1px 3px rgba(0,0,0,.5);
}




#map-app {
    cursor: default;
}

#menu-app {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 10px;
    z-index: 1000;
}

/* Base Candidates */
.label-select {
    display: none;
}

.label-select + label {
    cursor: pointer;
}

.label-select + label:hover {
    background: rgba(0, 0, 0, 0.01);
}

.label-select:checked + label {
    background: rgba(0, 0, 0, 0.05);
}

.label-select + label.button:hover,
.label-select:checked + label.button,
.label-select:checked + label.button:hover,
.label-select + label.button:hover {
    background-color: #3bb2d0;
}

.scroll-h {
    overflow-x: auto;
}

.scroll-v {
    overflow-y: auto;
}

.capitalize {
    text-transform: capitalize;
}

/* Number input styling to consider for base */

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

fieldset .increment {
    cursor: pointer;
    height: 19px;
    width: 21px;
    position: absolute;
    right: 1px;
    top: 1px;
}

fieldset .increment:hover {
    background: rgba(0, 0, 0, 0.1);
}

fieldset .increment.decrease {
    bottom: 1px;
    top: auto;
}

/* App Styles */
html,
body {
    position: relative;
    height: 100%;
}

.module {
    position: fixed;
    top: 20px;
    left: 20px;
    opacity: 1;
    width: 500px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

header {
    z-index: 1001;
    position: absolute;
}

.mode {
    position: fixed;
}

.offcanvas-fade {
    opacity: 0;
}

:target > .offcanvas-fade {
    opacity: 1;
}

/* Map */
#map-app {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: #eee url(/images/canvas.png) !important;
    overflow: hidden;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
}

.mapbox-container {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #eee url(/images/canvas.png) !important;
  overflow: hidden;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
  cursor: default;
}

.module.offcanvas-bottom:target ~ #map-app {
    bottom: 140px;
}

#map-app.crosshair-mode {
    cursor: crosshair;
}

/* Leaflet style overrides */
.leaflet-container {
    background: #ddd;
}

.leaflet-container .leaflet-popup-content-wrapper {
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.05);
}

.form-signin {
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .form-control {
  position: relative;
  height: auto;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}

